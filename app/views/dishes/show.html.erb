<h1>Dish Show Page</h1>
<section id="dish">
  <h1><%= @dish.name %></h1>
  <h1>Chef: <%= @dish.chefs_name %></h1><br>
  <section id="ingredients">
    <h3>Ingredients:</h3>
    <% @dish.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
  </section><br>
  <h1>Calories: <%= @dish.total_calories %></h1>
</section>
<% end %>
