<section id="chef">
  <h1><%= @chef.name %></h1>
  <h3><%= link_to "#{@chef.name}'s Ingredients", chef_chef_ingredients_path(@chef) %></h3>
</section>

<section id="top-ingredients">
  <h3>Top 3 Ingredients</h3>
  <% @chef.top_3_ingredients.each do |ingredient| %>
    <p><%= ingredient.name %></p>
  <% end %>
</section>