<h1><%= @chef.name %></h1>
<%= link_to "Ingredients Used", chef_ingredients_path(@chef) %>
<br>

<h3>Top 3</h3>
<ul>
  <section id=top_3>
    <% @chef.top_3_ingredients.each do |ingredient| %>
      <li><%= ingredient.name %></li>
    <% end %>
  </section>
</ul>

<% @chef.dishes.each do |dish| %>
  <section id='dish-<%= dish.id %>'>
    <b><%= dish.name %></b>
    <% dish.ingredients.each do |ingredient| %>
      <%= ingredient.name %>
    <% end %><br>
  </section>
<% end %>
