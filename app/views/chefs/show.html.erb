<h1><%= @chef.name %></h1>
<%= link_to "List of Ingredients", "/chefs/#{@chef.id}/ingredients"%>
<% @chef.popular_ingredients%>

<h3>Chef <%= @chef.name %> Most Popular Ingredients</h3>
<ul>
  <% @chef.popular_ingredients.each do |ingredient| %>
    <li><strong><%= ingredient.name %>, <%= ingredient.total %></strong></li>
  <% end  %>
</ul>